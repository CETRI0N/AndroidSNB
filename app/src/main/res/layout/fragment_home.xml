<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sova" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">


        <TextView
            android:id="@+id/sovichat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="SovaChat"
            android:textColor="#f00"
            android:textSize="55dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.78" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="413dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/sydney" />


                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pers1"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Sydney"
                        android:textColor="#f0f"
                        android:textStyle="bold"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/mess1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="I'm comming"
                        android:textColor="#00ffff"
                        android:textSize="19dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/otpravka1"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:layout_marginTop="12dp"
                    android:text="today 10:35"
                    android:textColor="#ff0"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/sydney" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/joy" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pers2"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Joy"
                        android:textColor="#f0f"
                        android:textStyle="bold"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/mess2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="STAR TEAM! STAR TEAM!"
                        android:textColor="#00ffff"
                        android:textSize="20dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/otpravka2"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:layout_marginTop="12dp"
                    android:text="yesterday 22:00"
                    android:textColor="#ffff00"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ada" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pers3"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Ada Wong"
                        android:textColor="#f0f"
                        android:textStyle="bold"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/mess3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="See you around"
                        android:textColor="#00ffff"
                        android:textSize="20dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/otpravka3"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:layout_marginTop="12dp"
                    android:text="yesterday 21:17"
                    android:textColor="#ffff00"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo4"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/wick" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pers4"
                        android:layout_width="193dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="John Wick"
                        android:textColor="#1e90ff"
                        android:textStyle="bold"
                        android:textSize="40dp" />

                    <TextView
                        android:id="@+id/mess4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Ya! I'm back"
                        android:textColor="#00ffff"
                        android:textSize="20dp"
                        android:textStyle="italic" />
                </LinearLayout>

                <TextView
                    android:id="@+id/otpravka4"
                    android:layout_width="match_parent"
                    android:layout_height="101dp"
                    android:layout_marginTop="12dp"
                    android:text=" yesterday 17:45"
                    android:textColor="#ffff00"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <Button

            android:id="@+id/buttonChatBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.976" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>